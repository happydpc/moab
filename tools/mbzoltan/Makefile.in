##############################################################################
# Makefile for simple example which uses the Zoltan and MOAB libraries
#
# To compile the example, type
#    gmake 
##############################################################################

srcdir = @srcdir@

all mbzoltan mbzoltanLibrary:
	@$(MAKE) -f $(srcdir)/Makefile.zoltan $@

install: 
distdir:

clean:
	@if cd lib; then $(MAKE) clean; fi
	@if cd mbzoltan; then $(MAKE) clean; fi

distclean: clean
	rm -f Config.moab Makefile

