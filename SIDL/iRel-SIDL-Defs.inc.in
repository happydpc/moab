IREL_DIR = @abs_srcdir@/..

include ${IREL_DIR}/iRel-Defs.inc

iRel_SIDLINCLUDEDIR = @abs_srcdir@
iRel_SIDLLIBDIR = @abs_builddir@

iRel_SIDL_INCLUDES = \
      -I${iRel_SIDLINCLUDEDIR} -I${iRel_SIDLINCLUDEDIR} \
      -I${iRel_SIDLINCLUDEDIR}/server -I@BABEL_DIR@/include ${iRel_INCLUDES}

iRel_SIDL_LIBS = \
      -L${iRel_SIDLLIBDIR} -liRelserver -L@BABEL_DIR@/lib -lsidl \
      -Wl,-rpath,${iRel_SIDLLIBDIR} -Wl,-rpath,${iRel_SIDLLIBDIR} -Wl,-rpath,@BABEL_DIR@/lib ${iRel_LIBS}

iRel_SIDL_FILES = \
      ${iRel_SIDLLIBDIR}/libiRelserver.so

